<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apuntes.Views.AnthonyRodriguez_Conteo"
             Title="AnthonyRodriguez_Conteo">
    <StackLayout>
        <Label Text="Ingrese una cadena de caracteres:" />
        <Entry x:Name="txtInput" />

        <Button Text="Calcular" Clicked="Calcular_Clicked" />

        <Label Text="Resultados:" FontAttributes="Bold" />
        <Label x:Name="lblNumbers" />
        <Label x:Name="lblLetters" />
        <Label x:Name="lblVowels" />
        <Label x:Name="lblUpperCase" />
        <Label x:Name="lblLowerCase" />
        <Label x:Name="lblTotal" />

        <Button Text="Limpiar" Clicked="Limpiar_Clicked" />
    </StackLayout>
</ContentPage>